source ~/.pentadactylrc.sensitive
set hlfind

set guioptions=bnCsc
set complete=slSf
set urlseparator=''
set showstatuslinks=command
set newtab=all

"kills ff's ^n shortcut
cmap <C-n> <Nop>
imap <C-n> <Nop>

"readability shortcut
map <Leader>r <C-Z><C-A-R><Esc>
"torbutton
map <Leader>t <C-Z><C-2><Esc>


set! browser.sessionstore.max_concurrent_tabs=0
